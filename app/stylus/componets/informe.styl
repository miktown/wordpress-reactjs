#informesappria
	#informes_wrapper
		.introduction
			color #87bd61
			font-size 1.2em
			font-weight 100
			text-align center
		.sinDatos,.sininforme
			font-size 2em
			color #c5c5c5
			margin-top 6em
			text-align center
		.sininforme
			color #c5c5c5
			// margin-left 11em
			// text-align left
		.sinDatos:before
			content ''
			background-image url('../../assets/sad.png')
			background-repeat no-repeat
			background-size: contain
			position absolute
			margin-bottom -10px
			margin-top 1px
			margin-left -1.9em
			height 35px
			width 35px
			z-index 0
		.sininforme:before
			content ''
			background-image url('../../assets/click.png')
			background-repeat no-repeat
			background-size: contain
			position absolute
			margin-bottom -10px
			margin-top 1px
			margin-left -1.9em
			marginleft -3em
			height 35px
			width 35px
			z-index 0
		.listaProfesores
			li
				padding 1.5em .5em
				background white
				margin 1.3em 0
				box-shadow 0 1px 2px rgba(0, 0, 0, 0.22)
		.profesorIcon
			padding-left 3em
			strong
				display: inline-block
				background: #0073aa
				color: white
				padding: .5em 1em
				border-radius: 3px
				font-size: 0.6em
				font-weight: 300
				float: right
				margin-right: 1em
		.profesorIcon::before
			content ''
			background-image url('../../assets/profe.png')
			background-repeat no-repeat
			background-size contain
			position absolute
			margin-bottom 0px
			margin-left -30px
			margin-top 0px
			height 20px
			width 20px