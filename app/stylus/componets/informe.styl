#informesappria
	#informes_wrapper
		.introduction
			color #87bd61
			font-size 1.2em
			font-weight 100
			text-align center
		.sinDatos,.sininforme
			font-size 2em
			color #c5c5c5
			margin-top 6em
			text-align center
		.sininforme
			color #c5c5c5
			// margin-left 11em
			// text-align left
		.sinDatos:before
			content ''
			background-image url('../../assets/sad.png')
			background-repeat no-repeat
			background-size: contain
			position absolute
			margin-bottom -10px
			margin-top 1px
			margin-left -1.9em
			height 35px
			width 35px
			z-index 0
		.sininforme:before
			content ''
			background-image url('../../assets/click.png')
			background-repeat no-repeat
			background-size: contain
			position absolute
			margin-bottom -10px
			margin-top 1px
			margin-left -1.9em
			marginleft -3em
			height 35px
			width 35px
			z-index 0
		.listaProfesores
			li
				padding 1.5em .5em
				background white
				margin 1.3em 0
				box-shadow 0 1px 2px rgba(0, 0, 0, 0.22)
		.profesorIcon
			padding-left 3em
			strong
				display: inline-block
				background: #0073aa
				color: white
				padding: .5em 1em
				border-radius: 3px
				font-size: 0.6em
				font-weight: 300
				float: right
				margin-right: 1em
		.profesorIcon::before
			content ''
			background-image url('../../assets/profe.png')
			background-repeat no-repeat
			background-size contain
			position absolute
			margin-bottom 0px
			margin-left -30px
			margin-top 0px
			height 20px
			width 20px
		.pedidoIcon
			padding-left 3em
			strong
				display: inline-block
				background: #0073aa
				color: white
				padding: .5em 1em
				border-radius: 3px
				font-size: .8em
				font-weight: 300
				margin-left: 1em
			strong.draft
				background #1ae22d
			strong.procesando
				background #0073aa
			strong.sin_stock
				background red
			strong.en_envio
				background green
			strong.completado
				background #666
		.pedidoIcon::before
			content ''
			background-image url('../../assets/pedido.png')
			background-repeat no-repeat
			background-size contain
			position absolute
			margin-bottom 0px
			margin-left -30px
			margin-top -1px
			height 20px
			width 20px
		.filters
			span
				cursor pointer
				transition all .1s ease-in-out
				display inline-block
				padding .5em 1em
				margin 1em .5em
				border 1px solid white
				border-radius 3px
				box-shadow 0 1px 3px #333
				background white
				color #333
			span.selected
				transition all .1s ease-in-out
				display inline-block
				padding .5em 1em
				margin 1em .5em
				border 1px solid #0073aa
				border-radius 3px
				box-shadow 0 1px 3px white
				background #0073aa
				color white