@import './reset'
@import './componets/selector'
@import './componets/updated'
@import './componets/filtros'
@import './componets/datepicker'
@import './componets/fechas'
@import './componets/loader'
@import './componets/informe'

#informesappria
	box-sizing border-box
	height auto
	position relative
	.informesPreview
		background #2B3033
		padding 2em
		border-radius 7px
		margin 3em auto
		width 30em
		color #C5C5C5
		font-weight 300
		box-shadow 0 2px 2px rgba(0, 0, 0, 0.22)
		user-select none
	#informes_wrapper
		.headerInformes
			position relative
			background transparent
			margin 0
			padding 1em
			width 100%
			display inline-block
			height 60px
			margin-left 0
			section
				position relative
				display inline-block
				padding 1em
				height 35px
		.viewInformes
			display block
			margin 1em
			margin-top 0
			border-radius 3px 3px 0 0
			overflow auto
			.viewInformes
				background white
				box-shadow 0 -1px 2px rgba(0, 0, 0, 0.22)
